# Dockerfile for MCGame Testing
FROM mcr.microsoft.com/dotnet/sdk:7.0 AS build

# 设置工作目录
WORKDIR /app

# 安装测试依赖
RUN apt-get update && apt-get install -y \
    unzip \
    wget \
    && rm -rf /var/lib/apt/lists/*

# 复制项目文件
COPY *.csproj ./
COPY src/**/*.csproj ./src/
COPY tests/**/*.csproj ./tests/

# 恢复依赖
RUN dotnet restore

# 复制源代码
COPY src/ ./src/
COPY tests/ ./tests/

# 构建项目
RUN dotnet build --configuration Release --no-restore

# 安装报告工具
RUN dotnet tool install -g dotnet-reportgenerator-globaltool

# 运行测试
FROM mcr.microsoft.com/dotnet/aspnet:7.0 AS test

WORKDIR /app

# 从构建阶段复制必要的文件
COPY --from=build /app/src ./src
COPY --from=build /app/tests ./tests
COPY --from=build /app/*.config ./
COPY --from=build /app/bin ./bin
COPY --from=build /app/obj ./obj
COPY --from=build /root/.dotnet/tools /root/.dotnet/tools

# 设置环境变量
ENV DOTNET_ROOT=/usr/share/dotnet
ENV PATH=$PATH:/root/.dotnet/tools

# 创建测试结果目录
RUN mkdir -p /app/TestResults /app/coverage-report

# 默认命令
CMD ["/bin/bash", "-c", "dotnet test --configuration Release --logger trx --collect:\"XPlat Code Coverage\" && reportgenerator -reports:TestResults/coverage.xml -targetdir:coverage-report -reporttypes:HtmlInline_AzurePipelines"]